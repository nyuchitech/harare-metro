{
  "name": "harare-metro",
  "version": "1.0.0",
  "type": "module",
  "description": "Harare Metro - News aggrgator for people in and aroudn Zimbabwe",
  "scripts": {
    "dev": "vite",
    "dev:worker": "wrangler dev",
    "dev:both": "./scripts/dev-start.sh",
    "build": "vite build",
    "build:check": "vite build --mode development",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler deploy",
    "deploy:staging": "npm run build && wrangler deploy --env staging",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "setup": "npm install && npm run build"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.4",
    "@heroicons/react": "^2.2.0",
    "fast-xml-parser": "^4.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250531.0",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5",
    "wrangler": "^4.18.0"
  },
  "keywords": [
    "zimbabwe",
    "news",
    "rss",
    "cloudflare",
    "worker",
    "react"
  ],
  "author": "Bryan Fawcett",
  "license": "MIT"
}
