{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "declarationMap": false,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["*.ts", "services/**/*.ts", "admin/**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "durable-objects",
    "**/*DO.ts",
    "services/ArticleInteractionsDO.ts",
    "services/RealtimeAnalyticsDO.ts",
    "services/RealtimeCountersDO.ts",
    "services/UserBehaviorDO.ts"
  ]
}