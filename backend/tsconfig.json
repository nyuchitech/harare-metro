{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["src/**/*", "worker/**/*", "workers/**/*"],
  "exclude": ["node_modules", "build"]
}