/**
 * Harare Metro Backend - Admin & API Worker Configuration
 * Zimbabwe's Premier News Aggregation Platform Backend
 * 
 * For more details on Wrangler configuration:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */ {
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "harare-metro-backend",
  "compatibility_date": "2025-04-01",
  "main": "./index.ts",
  
  /**
   * Custom Domain Routes - Admin backend at admin.hararemetro.co.zw
   */
  "routes": [
    "admin.hararemetro.co.zw/*"
  ],

  /**
   * Environment Variables
   */
  "vars": {
    "NODE_ENV": "production",
    "USE_FALLBACK_CONFIG": "false",
    "LOG_LEVEL": "info",
    "ROLES_ENABLED": "true",
    "DEFAULT_ROLE": "creator",
    "ADMIN_ROLES": "admin,super_admin,moderator",
    "CREATOR_ROLES": "creator,business-creator,author"
  },

  /**
   * Cloudflare D1 Database - Primary data store
   */
  "d1_databases": [
    {
      "binding": "DB", 
      "database_name": "hararemetro_db",
      "database_id": "70d94fe9-4a78-4926-927b-e88e37141a54"
    }
  ],

  /**
   * Analytics Engine - User interaction tracking
   */
  "analytics_engine_datasets": [
    {
      "binding": "NEWS_ANALYTICS",
      "dataset": "news_analytics"
    },
    {
      "binding": "SEARCH_ANALYTICS", 
      "dataset": "search_analytics"
    },
    {
      "binding": "CATEGORY_ANALYTICS",
      "dataset": "category_analytics"
    },
    {
      "binding": "USER_ANALYTICS",
      "dataset": "user_analytics"
    },
    {
      "binding": "PERFORMANCE_ANALYTICS",
      "dataset": "performance_analytics"
    }
  ],

  /**
   * AI Services - Workers AI and Vectorize for content processing
   */
  "ai": {
    "binding": "AI"
  },

  "vectorize": [
    {
      "binding": "VECTORIZE_INDEX",
      "index_name": "harare-metro-articles"
    }
  ],

  /**
   * KV Namespaces - Key-Value storage for auth sessions and caching
   */
  "kv_namespaces": [
    {
      "binding": "AUTH_STORAGE", 
      "id": "28448bdb9dd041dcaaefe292a7651c8a"
    }
  ],

